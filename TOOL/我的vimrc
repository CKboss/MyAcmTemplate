
syntax on
syntax enable
set cindent
set mouse=a
set tabstop=4
set shiftwidth=4
set nu
set nocompatible
set showcmd
set ignorecase smartcase
set hlsearch

//color solarized
set background=light

set gfn=Consolas\ 14

map <F5> :call Run()<CR>
func! Run()
    exec "w"
    exec "!g++ % -g -o %<"
    exec "!./%<"
endfunc


/********编译运行脚本***************/

g++ TITLE.cpp -o TITLE
echo -------TITLE编译结束--------
./TITLE
echo --------按任意键结束--------
read

